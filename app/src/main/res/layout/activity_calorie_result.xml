<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bottom_sheet_background"
    android:gravity="top|center"
    android:orientation="vertical"
    android:paddingLeft="30dp"
    android:paddingTop="10dp"
    android:paddingRight="30dp"
    android:paddingBottom="60dp">

    <com.google.android.material.bottomsheet.BottomSheetDragHandleView
        style="@style/HANDLE"
        android:layout_width="64dp"
        android:layout_height="4dp"
        android:layout_marginBottom="16dp" />

    <TextView
        style="@style/HEADING3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="Your estimated daily calorie needs are"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvResult"
        style="@style/HEADING2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="0"
        android:textSize="70sp"
        android:textStyle="bold" />

    <TextView
        style="@style/HEADING2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="See how your daily calorie needs change if you alter your activity level:" />


    <!-- Table to display calorie intake based on activity level -->
    <TableLayout
        android:id="@+id/tlCalorieInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:stretchColumns="1">

        <TableRow>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Activity Level"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Calorie Intake"
                android:textStyle="bold" />
        </TableRow>
    </TableLayout>


</LinearLayout>