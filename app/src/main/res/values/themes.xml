<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Base.Theme.Proj" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/white</item>
        <item name="colorAccent">@color/primary</item>
        <item name="editTextBackgroundColor">@color/fieldLight</item>
        <item name="editTextIconColor">@color/heading3Light</item>
        <item name="cardIconBackgroundColor">@color/cardIconBg</item>
        <item name="cardIconColor">@color/primary</item>
        <item name="cardSelectorColor">@color/fieldLight</item>
        <item name="cardSelectorShadow">@color/cardSelectorShadowLight</item>
        <item name="bottomSheetBackgroundColor">@color/white</item>
        <item name="startColor">@color/startColorLight</item>
        <item name="endColor">@color/endColorLight</item>
        <item name="containerBackgroundColor">@color/white</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_background</item>
    </style>

    <style name="SCREEN">
        <item name="android:background">@color/white</item>
    </style>

    <style name="TITLE">
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="HEADING2">
        <item name="android:textColor">@color/heading2Light</item>
    </style>

    <style name="HEADING3">
        <item name="android:textColor">@color/heading3Light</item>
    </style>

    <style name="FIELD">
        <item name="android:background">@drawable/et_border</item>
        <item name="android:textColorHint">@color/heading3Light</item>
    </style>

    <style name="CARD">
        <item name="android:background">@color/fieldLight</item>
    </style>

    <style name="BUTTON">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="HANDLE">
        <item name="android:background">@color/handleLight</item>
    </style>

    <style name="Theme.Proj" parent="Base.Theme.Proj" />
</resources>